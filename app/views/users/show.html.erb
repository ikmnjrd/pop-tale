<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col s12 m12">
    <section class="user_info">
      <h1>
        <%# = gravatar_for @user %>
        <%#gravatarはなんか使いたくない。チュートリアルではusers_helperにgravatar_forヘルパーを使ってる%>
        <%= @user.name %>
      </h1>
      <div>
      <% if @user.avatar.present? %>
        <%= image_tag(@user.avatar.thumb.url) %>
      <% else %>
        <%= image_tag 'hatena.jpeg', :size =>'100x100' %>
      <% end %>
      </div>
    </section>
    <section class="aaaaaa">
      <% if current_user?(@user) %>
        <%= render 'shared/painting_form'%>
      <% end %>
    </section>
    <section class="Gallery">
        <%= render 'gallery' %>
    </section>
  </aside>
</div>