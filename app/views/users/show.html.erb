<% provide(:title, @user.name) %>
<% provide(:gallery_title, @user.name+"'s Gallery") %>
<div class="container row">
  <aside class="col s12 m12">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
      <div>
      <% if @user.avatar.present? %>
        <%= image_tag(@user.avatar.thumb.url) %>
      <% else %>
        <%= image_tag 'hatena.jpeg', :size =>'100x100' %>
      <% end %>
      </div>
    </section>
    <section class="painting_form">
      <% if current_user?(@user) && @user.gallery.where(activated: false).any? %>
        <p>NOTICE: Your Painting is judging now. Please wait to next upload.</p>
      <% end %>
    </section>
    <section class="Gallery">
        <%= render 'shared/gallery' %>
    </section>
  </aside>
</div>